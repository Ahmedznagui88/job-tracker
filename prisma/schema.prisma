generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Project {
  id          String    @id @default(cuid())
  name        String    @unique
  description String?
  createdAt   DateTime  @default(now())
  sessions    Session[]

  @@map("projects")  // <-- tieni solo questo
}

model Session {
  id        String   @id @default(cuid())
  projectId String
  project   Project  @relation(fields: [projectId], references: [id])
  duration  Int
  startTime DateTime
  endTime   DateTime
  createdAt DateTime @default(now())

  @@map("sessions")  // <-- tieni solo questo
}